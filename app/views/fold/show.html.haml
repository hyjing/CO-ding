%h1 All Codes In This Fold

%table#codes
  %thead
    %tr
      %th Code Name
      %th Author
      %th Create Date
      %th More Info
  %tbody
    - @codes.each do |code|
      %tr
        %td= code.name
        %td= code.author
        %td= code.create_date
        %td= link_to "More about #{code.name}", code_path(code)

  = link_to 'Add new code  ', new_code_path
  = link_to 'Delete fold   ', fold_path(@fold), :method => :delete
  = link_to 'Back to fold list  ', fold_index_path
